<div class="page-header">
  <h1>Add New Content</h1>
</div>

<form action="/content/create">
  <div class="form-group">
    <label>Name:</label>
    <input name="name" type="text" class="form-control input-md" placeholder="Example: 5-Piece Luggage Set">
  </div>
  <div class="form-group">
    <label>Decription:</label>
    <textarea name="desc" class="form-control input-md"  rows="5" ></textarea>
  </div>
  <div class="form-group">
    <label>What Type of Content is this?</label>
       <select name="content_type">
            <option value="1">Book</option>
            <option value="2">Article</option>
            <option value="3">Framework</option>
      </select>
  </div>

<div class="form-group">
    <label> And in what Category?</label>
       <select name="tag">
         <% Tag.where(:level => 1).each do |t| %> 
            <option value=<%= t.id %>> <%= t.name %></option>
         <% end %>
       </select>
  </div>


  <div class="form-group">
    <label>Link to Photo [optional]</label>
    <input name="image_url" type="text" class="form-control input-md" placeholder="http://....">
  </div>
  <div class="form-group">
    <label>Link to URL [optional]</label>
    <input name="article_url" type="text" class="form-control input-md" placeholder="http://....">
  </div>
  <button type="submit" class="btn btn-success btn-md">Submit</button>
  or
  <a href="/content">Cancel</a>
</form>
